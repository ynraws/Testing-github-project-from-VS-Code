version: "3.8"
services:
  mysql:
    image: mysql:8.0
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: banking
    ports:
      - "3306:3306"
    command: --default-authentication-plugin=mysql_native_password
  accounts:
    build: ./microservices/accounts-service
    environment:
      DB_HOST: mysql
      DB_USER: root
      DB_PASSWORD: root
      DB_NAME: banking
    ports:
      - "8081:8080"
    depends_on:
      - mysql
  payments:
    build: ./microservices/payments-service
    environment:
      DB_HOST: mysql
      DB_USER: root
      DB_PASSWORD: root
      DB_NAME: banking
    ports:
      - "8082:8080"
    depends_on:
      - mysql
  auth:
    build: ./microservices/auth-service
    ports:
      - "8083:8080"
